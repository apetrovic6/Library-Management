@page "/books"
@inherits BooksBase


<MudText Typo="Typo.h1" Class="my-5">Books</MudText>

<MudGrid Spacing="5"  Justify="Justify.FlexStart">
    @{
        if (FetchedBooks?.Books?.Count > 0)
        {
            @foreach (var book in FetchedBooks?.Books)
            {
                <MudItem xs="12" sm="6" md="4" lg="3" xl="2" @onclick="@(e => NavigateToBook(book.Id))">
                    <MudCard Elevation="1">
                        <MudCardContent>
                            <MudCardMedia Image="@book.ImageLink" Height="400" Title="@book.Title"/>
                            <MudCardHeader >
                                <CardHeaderContent>
                                    <MudText Align="Align.Start" Typo="Typo.h6">@book.Title</MudText>
                                    <MudText Typo="Typo.body1">@book.Author</MudText>
                                </CardHeaderContent>
                            </MudCardHeader >
                            <MudText Align="Align.Right" Typo="Typo.body2">In Stock: @book?.Stock pc</MudText>
                        </MudCardContent>
                    </MudCard>
                 </MudItem>
            }
        }
    }
</MudGrid>